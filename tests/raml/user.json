{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "User",
	"type": "object",
	"properties": {
		"id": {
			"type": "integer"
		},
		"name": {
			"type": "string"
		},
		"mail": {
			"type": "string"
		},
		"role": {
            "type": "string",
			"enum": ["Admin", "Describer", "Anonymous"],
            "default": "Anonymous"
		},
		"activ": {
			"type": "boolean",
            "default": 0
		},
        "token": {
			"type": "string",
            "hidden": true
		}
	},
	"required": ["name", "mail", "token"]
}
